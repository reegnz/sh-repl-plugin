#!/usr/bin/env bash
SH_REPL_SHELL=${SH_REPL_SHELL:-bash}

 if [[ -z $1 ]] || [[ $1 == "-" ]]; then
    input=$(mktemp)
    trap "rm -f $input" EXIT
    cat /dev/stdin > $input
else
    input=$1
fi

</dev/null fzf --phony \
            --print-query \
            --preview "<$input $SH_REPL_SHELL -c {q}" \
            --preview-window="down:99%" \
            --height="99%" \
            --query="cat" \
            --bind "alt-up:preview-page-up,alt-down:preview-page-down"
